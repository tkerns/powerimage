{
  "name": "alcodo/powerimage",
  "description": "Laravel Package to create a dynamic image handler",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "glide",
    "http",
    "image",
    "dynamic",
    "laravel"
  ],
  "homepage": "https://github.com/alcodo/powerimage",
  "authors": [
    {
      "name": "Alexej Kloos",
      "email": "alexejkloos@gmail.com",
      "homepage": "https://alcodo.com"
    }
  ],
  "require": {
    "php" : ">=7.2.5",
    "illuminate/support": "^5.5|^5.8|^6.0|^7.0|^8.0"
  },
  "require-dev": {
    "phpunit/phpunit" : "^5.7|^8.0|^9.0",
    "orchestra/testbench": "^3.5|^4.0"
  },
  "autoload": {
    "psr-4": {
      "Alcodo\\PowerImage\\": "src/"
    },
    "files": [
      "src/helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Alcodo\\PowerImage\\PowerImageServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev"
}
